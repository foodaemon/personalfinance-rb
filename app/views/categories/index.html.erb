<section id="categories">
  <div class="row">
    <div class="panel panel-info">
      <div class="panel-heading">
        <h3 class="panel-title">Categories</h3>
      </div>
      <div class="panel-body">
        <table class="table table-responsive table-condensed">
          <thead>
          <tr>
            <th>Name</th>
            <th></th>
          </tr>
          </thead>
          <tbody>
          <% @categories.each do |category| %>
              <tr>
                <td><%= category.name %></td>
                <td>
                  <%= link_to edit_category_path(category), :class => 'btn btn-primary' do %>
                      <i class="glyphicon glyphicon-edit"></i> Edit
                  <% end %>
                  <%= link_to category, method: :delete, data: { confirm: 'Are you sure?' },
                              :class => 'btn btn-small btn-danger' do %>
                      <i class="glyphicon glyphicon-trash"></i> Delete
                  <% end %>
                </td>

              </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
    <br />
    <div>
      <%= link_to new_category_path, :class => 'btn btn-success' do %>
          <i class="glyphicon glyphicon-file"></i> New Category
      <% end %>
    </div>
  </div>
</section>