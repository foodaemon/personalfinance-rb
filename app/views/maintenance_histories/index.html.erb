<!-- Tables
================================================== -->
<section id="tables">
  <div class="sub-header">
    <h2>Maintenance Histories</h2>
  </div>
  <table class="table table-striped full-section table-hover">
    <thead>
    <tr>
      <th>Vehicle</th>
      <th>Mileage</th>
      <th>Item</th>
      <th>Maintenance date</th>
      <th>Maintenance cost</th>
      <th></th>
    </tr>
    </thead>
    <tbody>
    <% @maintenance_histories.each do |maintenance_history| %>
        <tr>
          <td><%= maintenance_history.vehicle.model %></td>
          <td><%= maintenance_history.mileage %></td>
          <td><%= maintenance_history.item %></td>
          <td><%= maintenance_history.maintenance_date %></td>
          <td><%= maintenance_history.maintenance_cost %></td>
          <td><%= link_to 'Edit', edit_maintenance_history_path(maintenance_history), :class=> 'btn btn-small' %>
            <%= link_to 'Destroy', maintenance_history, method: :delete, data: { confirm: 'Are you sure?' },
                        :class => 'btn btn-small btn-danger' %></td>
        </tr>
    <% end %>
    </tbody>
  </table>
  <br />
  <div class="form-actions">
    <%= link_to 'New Maintenance history', new_maintenance_history_path, :class => 'btn btn-primary' %>
  </div>
</section>