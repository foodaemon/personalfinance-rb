<section id="forms">
  <div class="sub-header">
    <h2>Users</h2>
  </div>

  <div class="row-fluid">
    <div class="span12">
      <%= form_for(@user) do |f| %>
          <% if @user.errors.any? %>
              <div id="error_explanation">
                <h2><%= pluralize(@user.errors.count, 'error') %> prohibited this user from being saved:</h2>
                <ul>
                  <% @user.errors.full_messages.each do |msg| %>
                      <li><%= msg %></li>
                  <% end %>
                </ul>
              </div>
          <% end %>

          <div class="control-group">
            <%= f.label :email, :class => 'control-label' %><br />
            <%= f.text_field :email, :class => 'input-large' %>
          </div>
          <div class="control-group">
            <%= f.label :password, :class => 'control-label' %><br />
            <%= f.text_field :password, :class => 'input-large' %>
          </div>
          <div class="control-group">
            <%= f.label :password_confirmation, :class => 'control-label' %><br />
            <%= f.text_field :password_confirmation, :class => 'input-large' %>
          </div>
          <div class="control-group">
            <%= f.label :is_locked,  :class => 'checkbox inline' %><br />
            <%= f.check_box :is_locked %>
          </div>
          <div class="form-actions">
            <%= f.submit %>
            <%= link_to 'Back', users_path, :class => 'btn btn-small' %>
          </div>
      <% end %>
    </div>
  </div> <!-- row-fluid -->
</section>
