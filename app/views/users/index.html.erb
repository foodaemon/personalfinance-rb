<section id="users-list">
  <div class="row">
    <div class="panel panel-info">
      <div class="panel-heading">
        <h3 class="panel-title">Users</h3>
      </div>
      <div class="panel-body">
        <table class="table table-condensed table-responsive">
          <thead>
          <tr>
            <th>Email</th>
            <th>Is locked</th>
            <th></th>
          </tr>
          </thead>
          <tbody>
          <% @users.each do |user| %>
              <tr>
                <td><%= user.email %></td>
                <td><%= user.is_locked %></td>
                <td>
                  <%= link_to edit_user_path(user), :class => 'btn btn-primary' do %>
                      <i class="glyphicon glyphicon-edit"></i> Edit
                  <% end %>
                  <%= link_to user, method: :delete, data: { confirm: 'Are you sure?' },
                              :class => 'btn btn-small btn-danger' do %>
                      <i class="glyphicon glyphicon-trash"></i> Delete
                  <% end %>
                </td>
              </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
    <br />
    <div>
        <%= link_to new_user_path, :class => 'btn btn-success' do %>
          <i class="glyphicon glyphicon-file"></i> New User
        <% end %>
    </div>
  </div>
</section>