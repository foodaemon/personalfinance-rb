<section id="forms">
  <div class="sub-header">
    <h2>Vehicle</h2>
  </div>

  <div class="row-fluid">
    <div class="span12">
      <%= form_for(@vehicle) do |f| %>
          <% if @vehicle.errors.any? %>
              <div id="error_explanation">
                <h2><%= pluralize(@vehicle.errors.count, 'error') %> prohibited this vehicle from being saved:</h2>

                <ul>
                  <% @vehicle.errors.full_messages.each do |msg| %>
                      <li><%= msg %></li>
                  <% end %>
                </ul>
              </div>
          <% end %>

          <div class="control-group">
            <%= f.label :year %><br />
            <%= f.date_select :year, :start_year => Time.now.year - 7 %>
          </div>
          <div class="control-group">
            <%= f.label :make %><br />
            <%= f.text_field :make %>
          </div>
          <div class="control-group">
            <%= f.label :model %><br />
            <%= f.text_field :model %>
          </div>
          <div class="control-group">
            <%= f.label :color, :class => 'control-label' %><br />
            <%= f.text_field :color %>
          </div>
          <div class="control-group">
            <%= f.label :license_plate_number, :class => 'control-label' %><br />
            <%= f.text_field :license_plate_number, :class => 'input-large' %>
          </div>
          <div class="control-group">
            <%= f.label :vin, :class => 'control-label' %><br />
            <%= f.text_field :vin, :class => 'input-large' %>
          </div>
          <div class="control-group">
            <%= f.label :purchase_date, :class => 'control-label' %><br />
            <%= f.date_select :purchase_date %>
          </div>
          <div class="control-group">
            <%= f.label :purchase_mileage, :class => 'control-label' %><br />
            <%= f.number_field :purchase_mileage, :class => 'input-large' %>
          </div>
          <div class="control-group">
            <%= f.label :purchased_from, :class => 'control-label' %><br />
            <%= f.text_field :purchased_from, :class => 'input-large' %>
          </div>
          <div class="control-group">
            <%= f.label :purchase_detail, :class => 'control-label' %><br />
            <%= f.text_area :purchase_detail, :size => '30x5' %>
          </div>
          <div class="control-group">
            <%= f.label :transmission, :class => 'control-label' %><br />
            <%= f.text_field :transmission, :class => 'input-large' %>
          </div>
          <div class="control-group">
            <%= f.submit %>
            <%= link_to 'Back', vehicles_path, :class => 'btn btn-small' %>
          </div>
      <% end %>
    </div>
  </div> <!-- row-fluid -->
</section>
